<h1>Artists</h1>
<ul>
  <% @artists.each do |artist| %>
    <li>
      <%= link_to artist.name, artist_path(artist) %> 
      (<%= pluralize(artist.songs.count, "song") %>)
    </li>
  <% end %>
  <% artist.songs.each do |s| %>
        <li>
          <%= link_to s.title, song_path(s) %>
        </li>
  <% end %>
  
</ul>